<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/frame_main_pathContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/im_files_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_back_black_24dp"/>

        <TextView
            android:id="@+id/tv_files_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="External Storage"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:textColor="@android:color/black"/>

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_files_path"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frame_main_pathContainer"
        android:layout_marginTop="4dp"
        android:clipToPadding="false"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>